generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Motorcycle {
  id       String @id
  make     String
  model    String
  yearFrom Int
  yearTo   Int
  image    String

  diagrams Diagram[]
  comments Comment[]
}

model Diagram {
  id     String @id
  name   String
  image  String
  width  Int
  height Int

  motorcycles    Motorcycle[]
  partOnDiagrams PartToDiagram[]
  comments       Comment[]
}

model Part {
  id          String @id
  partNumber  String
  description String

  partOnDiagrams PartToDiagram[]
  comments       Comment[]
}

model PartToDiagram {
  refNo    Int
  hotspots Json
  qty      Int

  partId String
  part   Part   @relation(fields: [partId], references: [id])

  diagramId String
  diagram   Diagram @relation(fields: [diagramId], references: [id])

  @@unique([partId, diagramId])
  @@index([partId])
  @@index([diagramId])
}

model Comment {
  id        String   @id
  username  String
  createdAt DateTime @default(now())
  text      String

  diagramId String?
  diagram   Diagram? @relation(fields: [diagramId], references: [id])

  motorcycleId String?
  motorcycle   Motorcycle? @relation(fields: [motorcycleId], references: [id])

  partId String?
  part   Part?   @relation(fields: [partId], references: [id])

  @@index([diagramId])
  @@index([motorcycleId])
  @@index([partId])
}
